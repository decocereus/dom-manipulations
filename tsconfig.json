{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2015",
      "rootDir": "./app",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "moduleResolution": "node"
    },
    "include": ["app/**/*"],
    "exclude": ["node_modules"]
  }